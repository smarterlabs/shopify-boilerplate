{
	"name": "shopify-boilerplate",
	"author": "https://smarterlabs.com",
	"version": "1.0.0",
	"license": "MIT",
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap --use-workspaces",
		"build": "dotenv -e .env -- lerna run build --stream",
		"clean": "dotenv -e .env -- lerna run clean --stream --no-sort --concurrency 999",
		"deploy:production": "dotenv -e .env -- lerna run deploy:production --stream --no-sort --concurrency 999",
		"dev": "dotenv -e .env -- lerna run dev --stream --no-sort --concurrency 999",
		"develop": "yarn run dev",
		"lint": "eslint ./",
		"lint:fix": "eslint ./ --fix",
		"open": "yarn run open:site",
		"open:site": "open-cli https://smarterlabs.com/",
		"start": "yarn run dev",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@smarterlabs/eslint-config": "^1.0.7",
		"@testing-library/jest-dom": "^4.1.0",
		"@testing-library/react": "^9.1.4",
		"child-process-promise": "^2.2.1",
		"dotenv-cli": "^3.1.0",
		"eslint": "^6.1.0",
		"husky": "^3.0.3",
		"jest": "^24.9.0",
		"lerna": "^3.16.4",
		"lint-staged": "^9.2.1",
		"yarn": "^1.17.3"
	},
	"dependencies": {
		"open-cli": "^5.0.0"
	}
}
